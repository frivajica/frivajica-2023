---
import Layout from './index.astro';
import { NavBar } from '@/components/layout/NavBar';
import { Footer } from '@/components/layout/Footer';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
	<main class="w-full">
		<NavBar client:load />
		<slot />
		<section class="absolute inset-x-0 bottom-0 h-8 w-full border-t-2 transition-height delay-100 hover:h-48">
			<Footer client:visible />
		</section>
	</main>
</Layout>
